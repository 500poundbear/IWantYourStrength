<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.dereknam.strengthapp.NewGroup">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Group Title"
        />

    <EditText
        android:id="@+id/create_new_group_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Group Title"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Group Description"
        />

    <EditText
        android:id="@+id/create_new_group_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Insert lengthy description here"
        android:inputType="textMultiLine"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Individuals"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="[Insert ListView Here]"
        />

    <Button
        android:id="@+id/create_new_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:onClick="createNewGroup"
        />
</LinearLayout>
